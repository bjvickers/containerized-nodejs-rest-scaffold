{
  "name": "containerized-nodejs-rest-scaffold",
  "version": "0.0.7",
  "description": "A scaffold for building a containerized NodeJS REST service",
  "author": "bjvickers",
  "license": "MIT",
  "homepage": "https://github.com/bjvickers/containerized-nodejs-rest-scaffold#README.md",
  "repository": {
    "type": "git",
    "url": "https://github.com/bjvickers/containerized-nodejs-rest-scaffold"
  },
  "bugs": {
    "url": "https://github.com/bjvickers/containerized-nodejs-rest-scaffold/issues"
  },
  "engines": {
    "node": ">=10.0.0",
    "npm": ">=6.0.0"
  },
  "husky": {
    "hooks": {
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS || (node ./scripts/notice.commits.js && exit 1)",
      "pre-push": "npm run inspect"
    }
  },
  "scripts": {
    "setup": "check-engine && npm run inspect && npm run assist:bump-version",
    "inspect": "npm run build && npm run check && npm test && npm run report",
    "build": "npm run build:transpile && npm run build:copy-static-assets",
    "build:transpile": "tsc",
    "build:copy-static-assets": "ts-node ./scripts/copy-static-assets.ts",
    "check": "npm run check:secure-code-style && npm run check:secure-credentials && npm run check:deadlibs",
    "check:secure-code-style": "tslint --config tslint.json \"src/**/*.ts\"",
    "check:secure-credentials": "check-for-leaks .",
    "check:deadlibs": "depcheck . --ignore-dirs=dist,node_modules --ignores=\"@commitlint/*,@types/*,husky,nodemon,tslint-config-security\"",
    "test": "npm run test:unit && npm run test:spec && npm run test:feature",
    "test:unit": "echo 'no unit tests yet' && exit 0",
    "test:spec": "echo 'no spec tests yet' && exit 0",
    "test:feature": "echo 'no feature tests yet' && exit 0",
    "report": "npm run report:complexity && npm run report:reminders && node ./scripts/notice.reports.js",
    "report:complexity": "exitzero cr ./dist/ | marked -s > ./reports/complexity.html",
    "report:reminders": "exitzero leasot --reporter markdown --ignore node_modules src/ | marked -s > ./reports/reminders.html",
    "assist:fix-secure-code-style": "tslint --fix --config tslint.json \"src/**/*.ts\"",
    "assist:bump-version": "bump --prompt --grep package-lock.json",
    "version": "git add .",
    "start:basic": "concurrently --prefix \"[{name}]\" --kill-others --prefix-colors \"yellow.bold,cyan.bold\" \"npm:watch-ts\" \"nodemon ./dist/bin/start.js\"",
    "start:debug": "concurrently --prefix \"[{name}]\" --kill-others --prefix-colors \"yellow.bold,cyan.bold\" \"npm:watch-ts\" \"nodemon --inspect-brk=0.0.0.0:9229 ./dist/bin/start.js\"",
    "start:profile": "node --prof ./dist/bin/start.js",
    "start": "pm2 start ./dist/bin/start.js -i \"max\" -- --production",
    "watch-ts": "tsc -w"
  },
  "dependencies": {
    "body-parser": "^1.18.3",
    "dotenv": "^6.1.0",
    "helmet": "^3.14.0",
    "inversify": "^5.0.1",
    "pm2": "^3.2.2",
    "reflect-metadata": "^0.1.12",
    "swagger-express-middleware": "^1.1.1",
    "ts-log-class": "^1.0.19",
    "version-bump-prompt": "^4.2.1"
  },
  "devDependencies": {
    "@commitlint/cli": "^7.2.1",
    "@commitlint/config-conventional": "^7.1.2",
    "@types/body-parser": "^1.17.0",
    "@types/dotenv": "^4.0.3",
    "@types/express": "^4.16.0",
    "@types/helmet": "0.0.42",
    "@types/node": "^10.12.0",
    "@types/shelljs": "^0.8.0",
    "@types/swagger-express-middleware": "^1.0.8",
    "check-engine": "^1.7.0",
    "check-for-leaks": "^1.2.0",
    "complexity-report": "^1.4.1",
    "concurrently": "*",
    "depcheck": "^0.6.11",
    "exitzero": "^1.0.1",
    "express": "^4.16.4",
    "husky": "*",
    "leasot": "^6.6.2",
    "marked": "^0.5.1",
    "nodemon": "*",
    "shelljs": "^0.8.2",
    "ts-node": "^7.0.1",
    "tslint": "^5.11.0",
    "tslint-config-security": "^1.12.0",
    "typescript": "^3.1.3"
  }
}