{
  "name": "containerized-nodejs-rest-scaffold",
  "version": "0.0.0",
  "private": true,
  "husky": {
    "hooks": {
      "pre-commit": "npm run build"
    }
  },
  "scripts": {
    "build": "npm audit && npm run lint && npm run transpile && npm test",
    "lint": "./node_modules/.bin/standard \"src/**/*.ts\"",
    "lint-fix": "./node_modules/.bin/standard --fix \"src/**/*.ts\"",
    "transpile": "./node_modules/.bin/tsc",
    "test": "npm run test-complexity && npm run test-spec && npm run test-feature",
    "test-complexity": "./node_modules/.bin/cr ./dist/",
    "test-spec": "echo 'no tests yet' && exit 0",
    "test-feature": "echo 'no tests yet' && exit 0",
    "start-wip": "node ./dist/bin/www",
    "start-wip-debugger": "node --inspect-brk=0.0.0.0:9229 ./dist/bin/www",
    "start-wip-profiler": "node --prof ./dist/bin/www",
    "start": "./node_modules/.bin/pm2 start ./dist/bin/www -i \"max\" -- --production"
  },
  "dependencies": {
    "cookie-parser": "~1.4.3",
    "express": "~4.16.0",
    "express-pino-logger": "^4.0.0",
    "http-errors": "~1.6.2",
    "pm2": "^3.2.2",
    "pug": "^2.0.3"
  },
  "devDependencies": {
    "@types/node": "^10.11.3",
    "complexity-report": "^2.0.0-alpha",
    "debug": "~2.6.9",
    "husky": "^1.1.2",
    "loadtest": "^3.0.4",
    "notes": "0.0.4",
    "standard": "*",
    "typescript-eslint-parser": "*",
    "eslint-plugin-typescript": "*",
    "typescript": "^3.1.1"
  },
  "standard": {
    "parser": "typescript-eslint-parser",
    "plugins": [
      "typescript"
    ]
  }
}
